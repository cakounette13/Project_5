{% extends "base.html.twig" %}

{% block title %}
    Nouveau client
{% endblock %}

{% block body %}
    <h1>Fiche identification client</h1>

    <div class="row">
        <div class="col-xs-10 col-md-6 col-lg-7">
            <div class="well">
                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                {{ form_errors(form) }}

                <div class="form-group">
                    {{ form_label(form.denomination, "", {'label_attr': {'class': 'col-sm-4 col-lg-4 control-label'}}) }}
                    {{ form_errors(form.denomination) }}
                    <div class="col-sm-6 col-lg-5">
                        {{ form_widget(form.denomination) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.nom, "", {'label_attr': {'class': 'col-sm-4 col-lg-4 control-label'}}) }}
                    {{ form_errors(form.nom) }}
                    <div class="col-sm-6 col-lg-5">
                        {{ form_widget(form.nom) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.prenom, "", {'label_attr': {'class': 'col-sm-4 col-lg-4 control-label'}}) }}
                    {{ form_errors(form.prenom) }}
                    <div class="col-sm-6 col-lg-5">
                            {{ form_widget(form.prenom) }}
                        </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.societe, "", {'label_attr': {'class': 'col-sm-4 col-lg-4 control-label'}}) }}
                    {{ form_errors(form.societe) }}
                    <div class="col-sm-6 col-lg-5">
                        {{ form_widget(form.societe) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.codePostal, "", {'label_attr': {'class': 'col-sm-4 col-lg-4 control-label'}}) }}
                    {{ form_errors(form.codePostal) }}
                    <div class="col-sm-6 col-lg-5">
                        {{ form_widget(form.codePostal) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.ville, "", {'label_attr': {'class': 'col-sm-4 col-lg-4 control-label'}}) }}
                    {{ form_errors(form.ville) }}
                    <div class="col-sm-6 col-lg-5">
                        {{ form_widget(form.ville) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.portable, "", {'label_attr': {'class': 'col-sm-4 col-lg-4 control-label'}}) }}
                    {{ form_errors(form.portable) }}
                    <div class="col-sm-6 col-lg-5">
                        {{ form_widget(form.portable) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.dateNaissance, "", {'label_attr': {'class': 'col-sm-4 col-lg-4 control-label'}}) }}
                    {{ form_errors(form.dateNaissance) }}
                    <div class="col-sm-6 col-lg-5">
                        {{ form_widget(form.dateNaissance) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.email, "", {'label_attr': {'class': 'col-sm-4 col-lg-4 control-label'}}) }}
                    {{ form_errors(form.email) }}
                    <div class="col-sm-6 col-lg-5">
                        {{ form_widget(form.email) }}
                    </div>
                </div>

                {{ form_rest(form) }}

                <input type="submit" value="Valider" class="btn btn-default btn-lg active">

                {{ form_end(form) }}

            </div>
        </div>
    </div>

    <div class="row">
        <a role="button" class="btn btn-default active" href={{ path("accueil") }}>Accueil</a>
    </div>



{% endblock %}

