{% extends "base.html.twig" %}

{% block title %}
    Gestion des clients
{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row">
            <h1>Récapitulatif Fidélité du Client</h1>
        </div>

        <div class="row">
            <h2>- {{ client.nom }} {{ client.prenom }} - {{ client.societe }}</h2>
        </div>
        <div class="row">
            <table class="table tableDetailClient table-hover table-bordered">
                <thead>
                <tr>
                    <th>Date</th>
                    <th>Montant TTC</th>
                    <th>Points de fidélité</th>
                    <th>points utilisés</th>
                </tr>
                </thead>

                <tbody>
                {% for vente in ventes %}
                    <tr>
                        <td>{{ vente.dateVente|date("d/m/Y") }}</td>
                        <td>{{ vente.montantvente|number_format(2, '.', ',') }}</td>
                        <td>{{ vente.pointFideliteVente|number_format(2, '.', ',') }}</td>
                        <td>{{ vente.pointsFideliteUtilises|number_format(2, '.', ',') }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="row">
            <h2>Points disponibles à ce jour : {{ client.pointsFidelite|number_format(2, '.', ',') }}</h2>
        </div>

        <div class="row">
            <h2>Nombres de ventes : {{ client.nbrVentes }}</h2>
        </div>

        <div class="row">
            <a role="button" class="btn btn-default active" href={{ path("accueil") }}>Accueil</a>
        </div>
    </div>
{% endblock %}
