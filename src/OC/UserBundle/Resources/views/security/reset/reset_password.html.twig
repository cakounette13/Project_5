{% extends 'base.html.twig' %}
{% block body %}
    <h2>{% block formTitle %}Renouvellement mot de passe{% endblock %}</h2>
        <div class="col-xs-12">
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            {{ form_start(form, {'attr': {'class': 'formulaire-container text-center '}}) }}
                <div class="form-group">
                    {{ form_row(form.plainPassword.first, {'label' : 'Nouveau mot de passe', 'attr':{'placeholder': 'nouveau mot de passe', 'class': 'text-center'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.plainPassword.second, {'label' : 'Confirmez votre mot de passe', 'attr': {'placeholder': 'Confirmation du nouveau mot de passe', 'class': 'text-center'}}) }}
                </div>
                <div>
                    <input class="btn-default" type="submit" value= "Renouveler votre mot de passe" />
                </div>
            {{ form_end(form) }}
            <a href="{{ path('security_send_email') }}">Un probleme? Redemandez un mail</a><br>
        </div>
{% endblock %}