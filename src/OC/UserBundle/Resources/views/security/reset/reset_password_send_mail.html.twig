{% extends 'base.html.twig' %}

{% block body %}
    {% block formTitle %}<h1>Nouveau mot de passe</h1>{% endblock %}

    <div class="col-xs-12">
    {% for label, flashes in app.session.flashbag.all %}
        {% for flash in flashes %}
            <div class="alert alert-{{ label }}">
                {{ flash }}
            </div>
        {% endfor %}
    {% endfor %}

    <div class="row">
        <div class="col-xs-10 col-md-6 col-lg-7">
            <div class="well">
            {{ form_start(form, {'attr': {'class': 'formulaire-container text-center '}}) }}
                {{ form_row(form._email, {'label' : 'Votre email de souscription'})}}
                <input class="btn btn-default btn-lg active" type="submit" value= "Envoyer" />
            {{ form_end(form) }}
            </div>
        </div>
    </div>

    <div class="row">
        <a role="button" class="btn btn-default active" href={{ path("accueil") }}>Accueil</a>
    </div>
{% endblock %}